    <div class="column is-4 border-right" style="display: none">
        <h1>Message Threads</h1>
        <hr style="background: #fcc000">
        <iframe id="threads-window" class="scrollbar" src='/message/threads' style="height:50%; width:100%; color: white"></iframe>
    </div>

    <!--LIST OF ONLINE USERS-->
    <div id="user-list" class="is-hidden-mobile column is-2 border-right s-layout__sidebar" style="margin-left: 100; display:inline;">
      <h1>Delegates List</h1>
      <hr style="background: #fcc000">
      <div class="list scrollbar" style="height: 54vh; overflow: auto">
            <% for(var i=0; i<users.length; i++) {%>
              <% if (users[i].user_type !== 2 && users[i].username != user.username) { %>
                <a id="<%= users[i].username %>_list_item" class="list-item" style="background: white" onclick="columns_click(`<%= users[i].username %>`, '<%= users[i].profile_picture_url %>', `<%= user.user_type %>`, `<%= users[i].user_type %>`)">
